          content:
            application/json:
              example:
                success: true
                message: Ответ на форму обратной связи успешно отправлен       
  /lots:
    get:
      summary: Получение списка всех лотов
      tags:
        - lot
      responses:
        '200':
          description: Успешное получение списка лотов
          content:
            application/json:
              example:
                lots:
                  - lotId: 1
                    title: "Название лота 1"
                    description: "Описание лота 1"
                    currentPrice: 150
                    startTime: "2023-01-01T12:00:00Z"
                    endTime: "2023-01-10T18:00:00Z"
                  - lotId: 2
                    title: "Название лота 2"
                    description: "Описание лота 2"
                    currentPrice: 180
                    startTime: "2023-01-03T09:30:00Z"
                    endTime: "2023-01-12T15:45:00Z"

  /lots/{lotId}:
    get:
      summary: Получение информации о конкретном лоте
      tags:
        - lot
      parameters:
        - in: path
          name: lotId
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Успешное получение информации о лоте
          content:
            application/json:
              example:
                lotId: 1
                title: "Название лота 1"
                description: "Описание лота 1"
                currentPrice: 150
                startTime: "2023-01-01T12:00:00Z"
                endTime: "2023-01-10T18:00:00Z"

  /lots/{lotId}/bid:
    post:
      summary: Участие в аукционе (сделать ставку)
      tags:
        - lot
      parameters:
        - in: path
          name: lotId
          required: true
          schema:
            type: integer
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                bidAmount:
                  type: number
      responses:
        '200':
          description: Успешное участие в аукционе
          content:
            application/json:
              example:
                success: true
                message: "Ставка успешно сделана"
        '400':
          description: Некорректная ставка (например, сумма меньше текущей цены)
          content:
            application/json:
              example:
                success: false
                message: "Некорректная ставка"
  /auction:
    get:
      summary: Получение информации о текущем состоянии аукциона
      tags:
        - auction
      responses:
        '200':
          description: Успешное получение информации о текущем состоянии аукциона
          content:
            application/json:
              example:
                auctionStatus: "open"
                currentLot:
                  lotId: 1
                  title: "Название лота 1"
                  description: "Описание лота 1"
                  startingPrice: 100
                  currentPrice: 120
                  startTime: "2023-01-01T12:00:00Z"
                  endTime: "2023-01-10T12:00:00Z"
                  image: "lot1.jpg"
                timeRemaining: "2 days 4 hours"
    put:
      summary: Обновление информации о текущем лоте
      tags:
        - auction
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                title:
                  type: string
                description:
                  type: string
                startingPrice:
                  type: number
                startTime:
                  type: string
                  format: date-time
                endTime:
                  type: string
                  format: date-time
                image:
                  type: string
      responses:
        '200':
          description: Успешное обновление информации о текущем лоте
          content:
            application/json:
              example:
                success: true
                message: "Информация о лоте успешно обновлена"
