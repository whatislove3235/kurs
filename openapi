          content:
            application/json:
              example:
                favorites: [...]

  /user/{userId}/favorites/{lotId}:
    post:
      summary: Добавление лота в избранное
      tags:
        - user
      parameters:
        - in: path
          name: userId
          required: true
          schema:
            type: string
        - in: path
          name: lotId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Успешное добавление лота в избранное
          content:
            application/json:
              example:
                success: true
                message: Лот добавлен в избранное

    delete:
      summary: Удаление лота из избранного
      tags:
        - user
      parameters:
        - in: path
          name: userId
          required: true
          schema:
            type: string
        - in: path
          name: lotId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Успешное удаление лота из избранного
          content:
            application/json:
              example:
                success: true
                message: Лот удален из избранного

  /user/{userId}/won_lots:
    get:
      summary: Получение списка лотов, выигранных пользователем
