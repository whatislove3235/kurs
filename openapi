penapi: 3.0.3
info:
  title: Auction User Management API
  version: 1.0.0
paths:
  /register:
    post:
      summary: Регистрация нового пользователя
      tags:
        - user
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                username:
                  type: string
                email:
                  type: string
                password:
                  type: string
      responses:
        '200':
          description: Успешная регистрация
          content:
            application/json:
              example:
                success: true
                message: Пользователь успешно зарегистрирован

  /login:
    post:
      summary: Авторизация пользователя
      tags:
        - user
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                identity:
                  type: string
                password:
                  type: string
      responses:
        '200':
          description: Успешная авторизация
          content:
            application/json:
              example:
                success: true
                message: Авторизация успешна
        '401':
          description: Неверные логин или пароль
          content:
            application/json:
              example:
                success: false
                message: Неверные логин или пароль

  /forgot_password:
    post:
      summary: Восстановление пароля
      tags:
        - user
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                email:
                  type: string
      responses:
        '200':
          description: Успешное восстановление пароля
          content:
            application/json:
              example:
                success: true
                message: Новый пароль отправлен на указанный email
        '404':
          description: Пользователь с указанным email не найден
          content:
            application/json:
              example:
                success: false
                message: Учетная запись с указанным email не найдена

  /change_password:
    post:
      summary: Смена пароля пользователя
      tags:
        - user
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                current_password:
                  type: string
                new_password:
                  type: string
                confirm_password:
                  type: string
      responses:
        '200':
          description: Успешная смена пароля
          content:
            application/json:
              example:
                success: true
                message: Пароль успешно изменен
        '400':
          description: Некорректный запрос или не все поля заполнены
          content:
            application/json:
              example:
                success: false
                message: Некорректный запрос или не все поля заполнены
        '401':
          description: Неверный текущий пароль
          content:
            application/json:
              example:
                success: false
                message: Неверный текущий пароль
  /update_info:
    put:
      summary: Обновление профиля пользователя
      tags:
        - user
      parameters:
        - in: query
          name: full_name
          required: true
          schema:
            type: string
        - in: query
          name: city
          required: true
          schema:
            type: string
        - in: query
          name: payment_method
          required: true
          schema:
            type: string
        - in: query
          name: email
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Успешное обновление профиля
          content:
            application/json:
              example:
                success: true
                message: Информация успешно обновлена
        '400':
          description: Некорректный запрос или не все поля заполнены
          content:
            application/json:
              example:
                success: false
                message: Некорректный запрос или не все поля заполнены
        '404':
          description: Пользователь не найден
          content:
            application/json:
              example:
                success: false
                message: Пользователь не найден
        '500':
          description: Ошибка сервера
          content:
            application/json:
              example:
                success: false
                message: Ошибка сервера
  /user/{userId}/bids:
    get:
      summary: Получение истории ставок пользователя
      tags:
        - user
      parameters:
        - in: path
          name: userId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Успешное получение истории ставок
          content:
            application/json:
              example:
                bids: [...]
                
  /user/{userId}/favorites:
    get:
      summary: Получение списка избранных лотов пользователя
