              example:
                success: true
                message: Параметры лота успешно изменены

  /admin/update_lot_images/{lotId}:
    put:
      summary: Добавление/изменение картинок лота
      tags:
        - moderator
      parameters:
        - in: path
          name: lotId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          multipart/form-data:
            schema:
              type: object
              properties:
                images:
                  type: array
                  items:
                    type: object
      responses:
        '200':
          description: Картинки лота успешно добавлены/изменены
          content:
            application/json:
              example:
                success: true
                message: Картинки лота успешно добавлены/изменены    
